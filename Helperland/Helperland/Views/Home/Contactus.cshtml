@model Helperland.Models.ContactusModel
@{
    ViewBag.Title = "Contact us";
    //Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="price-img " id="top">	<img src="~/img/group-16_2.png"></div>
<section class="container-fluid faq">
    <div class="container">

        <h1>
            Contact us
        </h1>
        <div class="faqlogo">
            <hr><img src="~/img/forma-1-copy-5.png"><hr>
        </div>

    </div>
</section>

<section class="container-fluid Contactus-page1">
    <div>
        <img src="~/img/forma-1_2.png">
        <p>1111 Lorem ipsum text 100, Lorem ipsum AB</p>
    </div>
    <div>
        <img src="~/img/phone-call.png">
        <p>+49 (40) 123 56 7890</p>
        <p>+49 (40) 987 56 0000</p>
    </div>
    <div>
        <img src="~/img/vector-smart-object (1).png">
        <p>info@helperland.com</p>
    </div>
</section>


<section class="container-fluid Contactus-page2">
    <h3>Get in touch with us</h3>
    <div class="row formrow1">
        <div class="sucess col-lg-5" style="justify-content:center;
       align-items:center; color: #3c763d; background-color: #dff0d8;
       border-color: #d6e9c6; padding: 15px; margin-bottom: 20px; border: 1px solid transparent;
       border-radius: 4px; display:none;" id="_sucess"><span class="close" onclick="document.getElementById('_sucess').style.display='none';">x</span>
            Your query has been submitted successfully. Our helpdesk team will contact you soon!
            

        </div>

    </div>
    <form enctype="multipart/form-data" method="post" asp-action="Contactus" asp-controller="Home">
        <div class="row formrow1">
            <div class="col-lg-3">
                <input asp-for="FirstName" class="form-control" placeholder="First name" aria-label="First name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <input asp-for="LastName" class="form-control" placeholder="Last name" aria-label="Last name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row formrow2">
            <div class="col-lg-3">
                <label class="visually-hidden" for="specificSizeInputGroupUsername">Username</label>
                <div class="input-group">
                    <div class="input-group-text">+91</div>
                    <input asp-for="PhoneNumber" class="form-control" id="specificSizeInputGroupUsername" placeholder="Mobile Number">

                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <input asp-for="Email" class="form-control" placeholder="Email Address" aria-label="Last name">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row formrow3">
                <div class="col-lg-5">
                    <select asp-for="Subject" class="form-select" aria-label="Default select example">

                        <option value="General" selected>General</option>
                        <option value="Inquiry">Inquiry</option>
                        <option value="Renewal">Renewal</option>
                        <option value="Revocation">Revocation</option>
                    </select>
                </div>
            </div>
            <div class="row formrow4">
                <div class="col-lg-5">
                    <textarea asp-for="Message" placeholder="Message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

            </div>
            <div class="attachmentlabel col-lg-5">Attachment</div>
            <div class="row">
                
                <div class="form-group col-lg-5">
                    <div class="custom-file">
                        <input asp-for="attachment" type="file" class="fileupload custom-file-input form-control" id="customFile">
                    </div>

                </div>
            </div>
            <div class="checkbox col-lg-5">
                <label>
                    <input formcontrolname="Privacy policy" asp-for="privacy" type="checkbox" class="checkboxinput ng-untouched ng-pristine ng-valid" required>
                    <span style="text-align:left;">
                        Our current ones apply privacy policy. I hereby agree that my data entered into the contact form will be stored electronically and processed and used for the purpose of establishing contact. The consent can be withdrawn at any time pursuant to Art. 7 (3) GDPR by informal notification (eg by e-mail).
                    </span>
                    <span asp-validation-for="privacy" class="text-danger"></span>
                </label>
            </div>

            <div class="submit formrow5" style="text-align:center;">
                <button type="submit">Submit</button>
            </div>

        </div>
    </form>
</section>


<section class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1280.8137790591757!2d8.79608058586818!3d50.05580786415826!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47bd12f7f864252f%3A0x52ddb2f4237f8ffc!2zUmjDtm4tWsO8Z2xlIGUuVi4!5e0!3m2!1sen!2sin!4v1638953276497!5m2!1sen!2sin" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
</section>
<div class="email">
    <h3>GET OUR NEWSLETTER</h3>
    <input type="text" placeholder="YOUR EMAIL" name="Mail">
    <button>Submit</button>
</div>
<script type="text/javascript" src="~/JS/main.js"></script>
@if (ViewBag.Contactussucess != null) {
<script>
    document.getElementById('_sucess').style.display = 'block';
</script>

}
