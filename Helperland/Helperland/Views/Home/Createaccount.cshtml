@model Helperland.Models.RegisterModel
@{
    ViewBag.Title = "Create an Account";
    //Layout = "~/Views/Shared/_Layout1.cshtml";
}
<section class="container-fluid faq">
    <div class="container">

        <h1 class="createaccountheadding">
            Create an account
        </h1>
        <div class="faqlogo">
            <hr><img src="~/img/forma-1-copy-5.png"><hr>
        </div>
    </div>
</section>


<section class="container-fluid row  justify-content-center align-items-center">

    <div class=" col-lg-3 col-md-2 col-sm-1 "></div>
    <div class=" col-lg-5  col-md-6 col-sm-8">
        <form asp-action="Createaccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row formrow1 ">
                <div class="col-lg-3 form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="First name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-lg-3 form-group">
                    <input asp-for="LastName" class="form-control" placeholder="Last name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row formrow2">
                <div class="col-lg-3 form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email Address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-lg-3 form-group">
                    <label class="visually-hidden" for="specificSizeInputGroupUsername">Mobile</label>
                    <div class="input-group">
                        <div class="input-group-text">+91</div>
                        <input asp-for="Mobile" class="form-control" placeholder="Mobile Number">

                    </div>
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="row formrow2">
                <div class="col-lg-3 form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-lg-3 form-group">
                    <input asp-for="Confirmpwd" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="Confirmpwd" class="text-danger"></span>
                </div>
            </div>

            @* <div class="col align-items-left chbox   ">



                    <input asp-for="privacy" type="checkbox">
                    <label for="privacy">
                        I have read the privacy policy .
                    </label>
                    <span asp-validation-for="privacy" class="text-danger"></span>



        </div>*@
            <div class="col align-items-left chbox">
                <label>
                    <input formcontrolname="Privacy policy" asp-for="privacy" type="checkbox" class="checkboxinput ng-untouched ng-pristine ng-valid" required >
                    <span>
                        I have read the <span>privacy policy .</span>
                    </span><br />
                    <span asp-validation-for="privacy" class="text-danger"></span>
                </label>
            </div>
            <div class="submit formrow5 text-center">
                <button type="submit">Submit</button>
                @*<input type="submit" value="Create" class="btn btn-primary" />*@
            </div>
        </form>
    </div>
    <div class=" col-lg-3 col-md-2 "></div>
</section>


<script type="text/javascript" src="~/JS/main.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


